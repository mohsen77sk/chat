{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chat/client/shared/app-config": [
        "libs/client/shared/app-config/src/index.ts"
      ],
      "@chat/client/shared/util/config": [
        "libs/client/shared/util/config/src/index.ts"
      ],
      "@chat/client/shared/util/media-watcher": [
        "libs/client/shared/util/media-watcher/src/index.ts"
      ],
      "@chat/client/shared/util/platform": [
        "libs/client/shared/util/platform/src/index.ts"
      ],
      "@chat/client/shared/util/splash-screen": [
        "libs/client/shared/util/splash-screen/src/index.ts"
      ],
      "@chat/client/shared/util/utils": [
        "libs/client/shared/util/utils/src/index.ts"
      ],
      "@chat/client/web-app/shell/core/auth": [
        "libs/client/web-app/shell/core/auth/src/index.ts"
      ],
      "@chat/client/web-app/shell/core/user": [
        "libs/client/web-app/shell/core/user/src/index.ts"
      ],
      "@chat/client/web-app/shell/feature": [
        "libs/client/web-app/shell/feature/src/index.ts"
      ],
      "@chat/client/web-app/shell/ui/layout": [
        "libs/client/web-app/shell/ui/layout/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
