{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chat/client/shared/app-config": [
        "libs/client/shared/app-config/src/index.ts"
      ],
      "@chat/client/shared/util/platform": [
        "libs/client/shared/util/platform/src/index.ts"
      ],
      "@chat/client/shared/util/splash-screen": [
        "libs/client/shared/util/splash-screen/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
